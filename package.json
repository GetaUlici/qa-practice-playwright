{
  "name": "qa-practice-playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:headless": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:single:thread": "npx playwright test --headed --workers=1",
    "open:report": "npx playwright show-report",
    "test:filter-by-tag": "npx playwright test --grep @smoke",
    "test:project:firefox": "npx playwright test --headed --project firefox",
    "test:ten:times": "npx playwright test --repeat-each=10",
    "format": "npx prettier --write .",
    "run:last:failed:tests": "npx playwright test --last-failed",
    "open:user-interface": "npx playwright test --ui",
    "open:trace": "npx playwright show-trace test-results/test-1-test-Google-Chrome/trace.zip",
    "record": "npx playwright codegen https://qa-practice.razvanvancea.ro/"
  },
